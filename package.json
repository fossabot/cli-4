{
  "name": "@panthera/cli",
  "version": "0.0.0",
  "description": "A command line interface tool for managing Panthera installations.",
  "main": "bin/cli.js",
  "bin": {
    "panthera": "bin/index.js"
  },
  "scripts": {
    "coverage": "codecov",
    "lint": "eslint bin/",
    "test": "nyc ava"
  },
  "engines": {
    "node": ">=8.2.1"
  },
  "author": "Connor Wiseman",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pantherajs/cli.git"
  },
  "bugs": {
    "url": "https://github.com/pantherajs/cli/issues"
  },
  "homepage": "https://github.com/pantherajs/cli#readme",
  "dependencies": {
    "@panthera/pubsub": "0.0.2",
    "@panthera/server": "0.0.1",
    "dotenv": "^6.0.0",
    "execa": "^0.10.0",
    "listr": "^0.14.1",
    "listr-input": "^0.1.3",
    "os": "^0.1.1",
    "path": "^0.12.7",
    "pg": "^7.4.3",
    "pg-format": "^1.0.4",
    "require-all": "^3.0.0",
    "sander": "^0.6.0",
    "semver": "^5.5.1",
    "yargs": "^12.0.1"
  },
  "devDependencies": {
    "ava": "1.0.0-beta.4",
    "codecov": "^3.0.4",
    "eslint": "^5.4.0",
    "nyc": "^12.0.2",
    "proxyquire": "^2.0.1",
    "sinon": "^6.1.5"
  },
  "nyc": {
    "exclude": [
      "coverage",
      "node_modules",
      "sql",
      "test"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  },
  "ava": {
    "files": [
      "test/**/*.spec.js"
    ]
  }
}
